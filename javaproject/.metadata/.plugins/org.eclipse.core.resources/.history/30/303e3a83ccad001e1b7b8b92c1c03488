package day0108;

public class For_07 {

	public static void main(String[] args) {
		// while문과 for문 비교
		
		System.out.println("**while문으로 10~0 출력**");
		int i=10;
		
		while(i>=0) //출력
		{
			System.out.print(i--+"  "); //조건비교
		}
		System.out.println();
		
		System.out.println("**for문으로 10~0 출력**");
		for(int a=10;a>=0;a--)
		{
			System.out.println(a+"  ");
		}
	}

}
