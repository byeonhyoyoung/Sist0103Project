package day0105;

public class QuizOper_07 {

	public static void main(String[] args) {
		// 여러분이 받은 알바비를 입력한후 만원,천원,백원,십원,일원의 갯수를 출력하시오
		/*
		 * 알바비는?  568712
		 * 
		 * 만원: 56
		 * 천원: 8
		 * 백원: 7
		 * 십원: 1
		 * 일원: 2
		 */
		
		//Scanner scanner = new Scanner(System.in);

        
        System.out.print("알바비는? ");
        int albaPayment = scanner.nextInt();

        int manWon = albaPayment / 10000;
        int cheonWon = (albaPayment % 10000) / 1000;
        int baekWon = (albaPayment % 1000) / 100;
        int sipWon = (albaPayment % 100) / 10;
        int ilWon = albaPayment % 10;

        // Print the results
        System.out.println("만원: " + manWon);
        System.out.println("천원: " + cheonWon);
        System.out.println("백원: " + baekWon);
        System.out.println("십원: " + sipWon);
        System.out.println("일원: " + ilWon);
		

	}

}
